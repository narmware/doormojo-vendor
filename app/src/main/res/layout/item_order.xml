<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/order_bt_call"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_phone_in_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Order ID:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_card"/>

                    <TextView
                        android:text="Customer Name:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_card"/>

                    <TextView
                        android:text="Order category:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_card"/>
                    <TextView
                        android:text="Order Date:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_card"/>

                    <TextView
                        android:text="Address:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_card"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/order_id"
                        android:text="1342"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/desc_card"/>

                    <TextView
                        android:id="@+id/order_name"
                        android:text="Rohit Savant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/desc_card"/>

                    <TextView
                        android:id="@+id/order_category"
                        android:text="Cleaning / Window Cleaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/desc_card"/>

                    <TextView
                        android:id="@+id/order_date_time"
                        android:text="24-1-2018 / 6.00PM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/desc_card"/>

                    <TextView
                        android:id="@+id/order_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/desc_card"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_stop_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Stop Order"
                    android:textAllCaps="false"
                    android:minHeight="1dp"
                    android:padding="8dp"
                    android:background="@drawable/button_stop"
                    android:textColor="@android:color/white"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-condensed"
                    />

                <Button
                    android:id="@+id/btn_complete_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Start Order"
                    android:textAllCaps="false"
                    android:minHeight="1dp"
                    android:padding="8dp"
                    android:background="@drawable/button_start"
                    android:textColor="@android:color/white"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-condensed"
                    />

                <Button
                    android:id="@+id/order_bt_more"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Order Details"
                    android:textAllCaps="false"
                    android:minHeight="1dp"
                    android:padding="8dp"
                    android:background="@drawable/button_view"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-condensed"
                    />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>